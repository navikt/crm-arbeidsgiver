<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <fullName>Only_accept_number_in_phone_fields</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Phone, &quot;\\+*?\\d*?(\\d*?){10}&quot;))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Phone: invalid phone number</errorMessage>
</ValidationRule>
